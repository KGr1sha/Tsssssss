import cv2
import mss
import keyboard
from time import time, sleep
import pyautogui
from pywinauto.mouse import click as left_click



pyautogui.PAUSE = 0
is_up = True
print("press 's' to start")
print("press 'q' to quit")
keyboard.wait('s')
sct = mss.mss()
break_message = cv2.imread('broken message.png')
w = break_message.shape[1]
h = break_message.shape[0]



def click(x, y):
    left_click(button='left', coords=(x, y))


while True:
    scr = sct.shot()
    screen = cv2.imread(scr)
    result = cv2.matchTemplate(screen, break_message, cv2.TM_CCOEFF_NORMED)
    _, max_val, _, max_loc = cv2.minMaxLoc(result)
    if max_val >= .85:
        x = max_loc[0] + w // 2
        y = max_loc[1] + h - h // 4
        
        click(x, y)
    sleep(1)
    if is_up:
        pyautogui.scroll(-1600)
        sleep(0.2)
        pyautogui.scroll(-1600)
        is_up = False
    else:
        pyautogui.scroll(1600)
        sleep(0.2)
        pyautogui.scroll(1600)
        is_up = True
    sleep(3)
    if keyboard.is_pressed('q'):
        break


